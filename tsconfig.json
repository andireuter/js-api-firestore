    "moduleResolution": "Node16",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "isolatedModules": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
